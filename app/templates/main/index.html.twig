{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.upcoming_events_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.upcoming_events_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ 'label.event_name'|trans }}</th>
                <th>{{ 'label.date'|trans }}</th>
                <th>{{ 'label.category_name'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.name }}</td>
                    <td>{{ event.date|format_datetime('long') }}</td>
                    <td>{{ event.category.name }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message.no_data'|trans }}
        </p>
    {% endif %}
    <div class="link-centered">
        <a href="{{ url('event_index') }}" title="go to events">{{ 'events.link'|trans }}</a>
        <a href="{{ url('contact_index') }}" title="go to contacts">{{ 'contacts.link'|trans }}</a>
        <a href="{{ url('category_index') }}" title="go to categories">{{ 'categories.link'|trans }}</a>
    </div>
{% endblock %}