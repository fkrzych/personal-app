{% extends 'base.html.twig' %}

{% block title %}
    {{ contact.name }}
{% endblock %}

{% block body %}
    {% if contact is defined and contact|length %}
        <h1>{{ contact.name }}</h1>
        <dl>
            <dt>{{ 'label.contact_name'|trans }}</dt>
            <dd>{{ contact.name }}</dd>
            <dt>{{ 'label.phone'|trans }}</dt>
            <dd>{{ contact.phone }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>
                <ul>
                {% for tag in contact.tags %}
                <li>{{ tag.name }}</li>
                {% endfor %}
                </ul>
            </dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    <a href="{{ url('contact_index') }}" title="go to contacts">{{ 'contacts.link'|trans }}</a>
{% endblock %}