{% extends 'base.html.twig' %}

{% block title %}
    Contacts
{% endblock %}

{% block body %}
    <h1>Contacts</h1>
    {% if contacts is defined and contacts|length %}
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Contact Name</th>
                <th>Phone number</th>
                <th>Tags</th>
                <th scope="col">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.phone }}</td>
                    <td>{{ contact.tags|join(', ') }}</td>
                    <td>
                        <a href="{{ url('contact_show', {'id': contact.id}) }}" title="edit contact">Edit contact</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ url('event_index') }}" title="go to events">Go to events</a>
    {% else %}
        <p>
            List is empty.
        </p>
    {% endif %}
{% endblock  %}