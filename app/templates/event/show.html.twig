{% extends 'base.html.twig' %}

{% block title %}
    {{ event.name }}
{% endblock %}

{% block body %}
    {% if event is defined and event|length %}
        <h1>{{ event.name }}</h1>
        <a href="{{ url('main_index') }}" title="go to upcoming events">{{ 'main.link'|trans }}</a>
        <dl>
            <dt>{{ 'label.event_name'|trans }}</dt>
            <dd>{{ event.name }}</dd>
            <dt>{{ 'label.date'|trans }}</dt>
            <dd>{{ event.date|format_datetime('long')}}</dd>
            <dt>{{ 'label.category'|trans}}</dt>
            <dd>{{ event.category.name }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            <dd>
                <ul>
                    {% for tag in event.tags %}
                        <li>{{ tag.name }}</li>
                    {% endfor %}
                </ul>
            </dd>
            <dt>{{ 'label.note'|trans }}</dt>
            <dd>{{ event.note|markdown_to_html }}</dd>
        </dl>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    <a href="{{ url('event_index') }}" title="go to events">{{ 'events.link'|trans }}</a>
{% endblock %}