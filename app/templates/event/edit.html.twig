{% extends 'base.html.twig' %}

{% block title %}
    Edit event
{% endblock %}

{% block body %}
    {% if event is defined and event|length %}
        <h1>Edit Event {{ event.name }}</h1>
        <dl>
            <dt>Event Name</dt>
            <dd>{{ event.name }}</dd>
            <dt>Date and Time</dt>
            <dd>{{ event.date|format_datetime('long')}}</dd>
            <dt>Category</dt>
            <dd>{{ event.category.name }}</dd>
        </dl>
        <a href="{{ url('event_index') }}" title="back to events">Back to events</a>
    {% else %}
        <p>
            Event not found.
        </p>
    {% endif %}
{% endblock %}