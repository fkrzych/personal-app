{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_list'|trans }}</h1>
    <div class="link-space-between">
        <a href="{{ url('main_index') }}" title="go to upcoming events">{{ 'main.link'|trans }}</a>
        <a href="{{ url('event_create') }}" title="create event">{{ 'create.event'|trans}}</a>
    </div>
    {% if pagination is defined and pagination.items|length %}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'event.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.event_name'|trans, 'event.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.date'|trans, 'event.date') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.category'|trans, 'category.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.tags'|trans, 'tags.name') }}</th>
                <th scope="col">
                    {{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.date|format_datetime('long') }}</td>
                    <td>{{ event.category.name }}</td>
{#                    <td>{{ event.events_tags.name }}</td>#}
                    <td>
                        <a href="{{ url('event_show', {'id': event.id}) }}" title="show event">{{ 'show.event'|trans}}</a>
                        <a href="{{ url('event_edit', {'id': event.id}) }}" title="edit event">{{ 'edit.event'|trans}}</a>
                        <a href="{{ url('event_delete', {'id': event.id}) }}" title="delete event">{{ 'delete.event'|trans}}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <p>
            {{ 'message.no_data'|trans }}
        </p>
    {% endif %}
    <div class="link-centered">
        <a href="{{ url('contact_index') }}" title="go to contacts">{{ 'contacts.link'|trans }}</a>
        <a href="{{ url('category_index') }}" title="go to categories">{{ 'categories.link'|trans }}</a>
        <a href="{{ url('tag_index') }}" title="go to tags">{{ 'tags.link'|trans }}</a>
    </div>

{% endblock  %}