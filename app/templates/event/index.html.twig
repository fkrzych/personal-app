{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_list'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_list'|trans }}</h1>
    {% if pagination is defined and pagination.items|length %}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'event.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.event_name'|trans, 'event.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.date'|trans, 'event.date') }}</th>
                <th>{{ 'label.category'|trans}}</th>
                <th scope="col">
                    {{ 'label.actions'|trans }}
                </th>
            </tr>
            </thead>
            <tbody>
            {% for event in pagination.items %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.date|format_datetime('long') }}</td>
                    <td>{{ event.category.name }}</td>
                    <td>
                        <a href="{{ url('event_show', {'id': event.id}) }}" title="edit event">Edit event</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>



        <a href="{{ url('contact_index') }}" title="go to contacts">Go to contacts</a>
    {% else %}
        <p>
            List is empty.
        </p>

        <a href="{{ url('contact_index') }}" title="go to contacts">Go to contacts</a>
    {% endif %}
{% endblock  %}